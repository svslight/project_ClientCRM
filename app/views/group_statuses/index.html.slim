.bg-light.border-bottom
  .row.d-flex.align-items-center.py-3
    .col-1
    .col-6
      h5= 'Статус групп'
    .col-4
      nav.nav.justify-content-end
        - if can?(:create, group_status)
          p= link_to 'Добавить статус группы', new_group_status_path, class: 'btn btn-success btn-sm'
    .col-1

ul.list-group.list-group-flush
  .group-status-errors
    / = render 'shared/errors', resource: group-status
  .group-statuses
    = render group_statuses
