= form_with model: country, class: 'hidden', html: { id: "edit-country-#{country.id}", data: { remote: true } } do |f|
  = render 'shared/errors', resource: country

  .row
    .col-5
      = f.label :name, 'Страна', class: "hidden"
      = f.text_field :name, class: 'form-control'

    .col-7
      = f.submit 'Сохранить', class: 'btn btn-success btn-sm mr-2'
      = link_to 'Отменить', countries_cancel_path(id: country), html_options={ class: 'btn btn-success btn-sm cancel-country', data: {id: country.id, remote: true} }
