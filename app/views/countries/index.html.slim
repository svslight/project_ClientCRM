.bg-light.border-bottom
  .row.d-flex.align-items-center.py-3
    .col-1
    .col-6
      h5= 'Список стран'
    .col-4
      nav.nav.justify-content-end
        - if can?(:create, country)
          p= link_to 'Добавить страну', new_country_path, class: 'btn btn-success btn-sm'
    .col-1

ul.list-group.list-group-flush
  .country-errors
    / = render 'shared/errors', resource: country
  .countries
    = render countries
