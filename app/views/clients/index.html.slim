.bg-light.border-bottom
  .row.d-flex.align-items-center.py-3
    .col-1
    .col-6
      h4= 'Список членов организации'
    .col-4
      nav.nav.justify-content-end
        - if can?(:create, client)
          p= link_to 'Добавить клиента', new_client_path, class: 'btn btn-success btn-sm'

ul.list-group.list-group-flush
  .client-errors
    = render 'shared/errors', resource: client
  .clients
    = render clients
